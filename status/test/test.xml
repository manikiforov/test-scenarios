<!-- параметр integration определяет будут ли вызываться реальные внешние сервисы или будут использоваться только mock-данные -->
<test integration="false">

    <test-case id="test 1" integration="true">
        <q>test 1</q>
        <a>данные с сервера</a>
        <responseData>{data:{response:"данные с сервера"}}</responseData>
    </test-case>

    <test-case id="test 1 - failed">
        <q>test 1</q>
        <a>данные с сервера</a>
    </test-case>

    <mockData>
        <query method="get">http://localhost:9001/method2</query>
        <response type="json" status="200">{response:"данные из теста"}</response>
    </mockData>

    <test-case id="test 2">
        <q>test 2</q>
        <a>данные из теста</a>
        <responseData>{data:{response:"данные из теста"}}</responseData>
    </test-case>

    <mockData>
        <query method="get">http://localhost:9001/401</query>
        <response status="401">{response:"данные из теста"}</response>
    </mockData>

    <test-case id="test 3">
        <q>test 3</q>
        <a>статус 401</a>
    </test-case>

    <mockData>
        <query method="get">http://localhost:9001/parameters?p1=${param1}&amp;p2=${param2}</query>
        <parameters>
            <param1>1</param1>
            <param2>2</param2>
        </parameters>
        <response type="text">ok</response>
    </mockData>

    <test-case id="test parameters">
        <q>test 4</q>
        <a>ok</a>
    </test-case>

    <mockData>
        <query method="get">
            http://example.com/${path}/?param1=${p1}&amp;param2=${p2}
        </query>
        <parameters>
            <path>путь</path>
            <p1>value 1</p1>
            <p2>value 2</p2>
        </parameters>
        <response type="text">
            ok
        </response>
    </mockData>

    <test-case id="test 5">
        <q>test 5</q>
        <a>ok</a>
    </test-case>


</test>